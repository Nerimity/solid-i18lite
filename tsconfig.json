{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "jsxImportSource": "solid-js",
    "declarationMap": true,
    "declaration": true,
    "sourceMap": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "outDir": "./dist",
    "paths": {
      "#/*": ["./docs/src/*"],
      "@nerimity/solid-i18lite": ["./src/index.ts"]
    },
    "resolveJsonModule": true,
    "target": "esnext",
    "verbatimModuleSyntax": true
  },
  "include": ["./docs", "./src", "index.d.ts", "./test"]
}
